generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  minTemp Int
  maxTemp Int
  rain    Boolean

  category_id Int
  category    Category @relation(fields: [category_id], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  Activity Activity[]
}

model Location {
  latitude Float 
  longitude Float
  @@id([latitude, longitude])
  name String
}
